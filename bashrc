export PATH=~/Bin:$PATH
source ~/.git-completion.bash

# alias
alias cls="clear"
alias ll="ls -alG"
alias ls="ls -G"

## tools
alias e="emacs"
alias axel="axel -a"
alias wget="wget -c"

## git
alias gs="git status"
alias gc="git commit"
alias gp="git push"
alias ga="git add"

